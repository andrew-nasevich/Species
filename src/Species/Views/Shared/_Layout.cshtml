<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link data-require="bootstrap-css@@*" data-semver="3.3.6" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.css" />
    
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Spinner/spinner.css" />
    <link rel="stylesheet" href="~/css/Authorize/authorize.css" />

    <script src="~/lib/Angularjs/angular.js"></script>
    <script src="~/lib/Angularjs/angular-ui-router.js"></script>
    <script src="~/lib/Angularjs/angular-route.js"></script>
    <script src="~/lib/Angularjs/angular-resource.js"></script>
    <script src="~/lib/Angularjs/angular-cookies.js"></script>
    <script src="~/lib/Angularjs/angular-sanitize.js"></script>
    <script src="~/js/root/app.js"></script>
    <script src="~/js/third-party/ui-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/js/third-party/angularjs-dropdown-multiselect.min.js"></script>
    <script src="~/js/Authorization/Authorization.js"></script>
    <script src="~/js/Services/auth.js"></script>
    <script src="~/js/Services/dialog.js"></script>

    <script src="~/js/Services/pleasewait.js"></script>
</head>
<body ng-app="app" ng-controller="appController as vm">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                
                
                <ul class="navigation-list">
                    <li id="observations-navigation">
                        <a class="nav-link navbar-brand" href="/Observation/">Карта наблюдений</a>
                    </li>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <li>
                            <a class="nav-link navbar-brand" href="/Observation/AddObservation">Добавление наблюдений</a>
                        </li>
                        <li>
                            <a class="nav-link navbar-brand" href="/SpeciesHierarchy#!species">Иерархия видов</a>
                        </li>
                        <li>
                            <a class="nav-link navbar-brand" href="/info/ProtectionСategories">Категории охраны</a>
                        </li>
                        <li ng-if="isAdmin">
                            <a class="nav-link navbar-brand" href="/AccountRoles/">Роли пользователей</a>
                        </li>
                        <li class="auth-navigation" ng-if="isAuthenticated">
                            <a class="nav-link navbar-brand" ng-click="vm.onLogout()">Выход</a>
                        </li>
                        <li class="auth-navigation" ng-if="!isAuthenticated">
                            <a class="nav-link navbar-brand" ng-click="vm.onAuthorization()">Вход</a>
                        </li>
                    </div>
                </ul>
                
                <button id="nav-button" class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer"class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Species
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
