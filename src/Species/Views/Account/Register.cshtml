
@{
    ViewData["Title"] = "Регистрация";
}

<script src="~/js/Account/Register.js"></script>

<div ng-app="RegisterModule">
    <div ng-controller="RegisterController as vm">

        <a href="/Account/Login">Вход</a>
        <div>
            <div class="form-group">
                <label>Введите Email</label>
                <input type="text" ng-model="vm.account.Email" />
            </div>
            <div class="form-group">
                <label>Введите пароль</label>
                <input type="password" ng-model="vm.account.Password" />
            </div>
            <div class="form-group">
                <label>Введите имя</label>
                <input type="text" ng-model="vm.account.Name" />
            </div>
            <div class="form-group">
                <label>Введите фамилию</label>
                <input type="text" ng-model="vm.account.Surname" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" ng-click="vm.onRegister()" />
            </div>
        </div>
    </div>
</div>


