
@{
    ViewData["Title"] = "Войти в аккаунт";
}

<script src="~/js/Account/Login.js"></script>

<div ng-app="LoginModule">
    <div ng-controller="LoginController as vm">

        <a href="/Account/Register">Регистрация</a>
        <div>
            <div class="form-group">
                <label>Введите Email</label>
                <input type="text" ng-model="vm.account.Email" />
            </div>
            <div class="form-group">
                <label>Введите пароль</label>
                <input type="password" ng-model="vm.account.Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-outline-dark" ng-click="vm.onLogin()" />
            </div>
        </div>
    </div>
</div>


